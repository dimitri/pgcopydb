# top-most EditorConfig file
root = true

# rules for all files
# we use tabs with indent size 4
[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Don't change test output files, pngs, test data files and documentation
[*.{out,png,data,md,rst,txt}]
indent_style = unset
indent_size = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

[*.{py,tex}]
indent_style = space
indent_size = 4
tab_width = 4

[*.{sql,sh}]
indent_size = unset
indent_style = unset

[*{.yml,.yaml,Dockerfile*}]
indent_style = space
indent_size = 2
tab_width = 2

[*.bat]
end_of_line = crlf
